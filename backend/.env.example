# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=blacksmith_forge
DB_USER=root
DB_PASSWORD=

# Application Configuration
APP_ENV=development
APP_DEBUG=true

# API Configuration
API_VERSION=v1

# Base path for subdirectory deployments (e.g. /blacksmith_forge)
APP_BASE_PATH=/blacksmith_forge

# Logging
LOG_LEVEL=debug

# WebHatchery Auth (shared JWT)
WEBHATCHERY_JWT_SECRET=your_webhatchery_jwt_secret
AUTH_JWT_SECRET=your_webhatchery_jwt_secret
JWT_SECRET=your_webhatchery_jwt_secret
JWT_ISSUER=webhatchery
JWT_AUDIENCE=localhost
